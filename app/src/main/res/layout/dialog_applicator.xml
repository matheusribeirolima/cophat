<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.matheus.cophat.data.presenter.ApplicatorConfigurePresenter" />

        <variable
            name="buttonPresenter"
            type="com.matheus.cophat.data.presenter.BottomButtonPresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/tvTitleDialogApplicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{presenter.title}"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:fadeIn="@{100}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/add_applicator" />

        <TextView
            android:id="@+id/tvSubtitleDialogApplicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:text="@{presenter.subtitle}"
            android:textSize="@dimen/large_size"
            app:fadeIn="@{300}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleDialogApplicator"
            tools:text="@string/add_desc_applicator" />

        <TextView
            android:id="@+id/tvNameDialogApplicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/name_applicator"
            android:textSize="@dimen/title_size"
            app:fadeIn="@{500}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitleDialogApplicator" />

        <EditText
            android:id="@+id/etNameDialogApplicator"
            style="@style/AppTheme.EditTextTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:hint="@string/complete_name"
            android:inputType="textCapWords"
            android:text="@={presenter.name}"
            app:fadeIn="@{600}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameDialogApplicator" />

        <TextView
            android:id="@+id/tvContactDialogApplicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/contact_applicator"
            android:textSize="@dimen/title_size"
            app:fadeIn="@{800}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNameDialogApplicator" />

        <EditText
            android:id="@+id/etContactConfigure"
            style="@style/AppTheme.EditTextTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:text="@={presenter.contact}"
            app:fadeIn="@{1000}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContactDialogApplicator" />

        <Button
            android:id="@+id/btCancelApplicator"
            style="@style/AppTheme.SecondaryButtonTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/extra_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:text="@string/cancel"
            app:fadeIn="@{1200}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btSaveApplicator"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContactConfigure" />

        <Button
            android:id="@+id/btSaveApplicator"
            style="@style/AppTheme.ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:alpha="@{buttonPresenter.alpha}"
            android:enabled="@{buttonPresenter.enabled}"
            android:text="@string/save"
            app:endAlpha="@{0.5f}"
            app:fadeIn="@{1300}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btCancelApplicator"
            app:layout_constraintTop_toTopOf="@+id/btCancelApplicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>