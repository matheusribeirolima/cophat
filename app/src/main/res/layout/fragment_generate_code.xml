<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/tvTitleCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/insert_data_before"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:fadeIn="@{100}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChildCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/child_name"
            android:textSize="@dimen/title_size"
            app:fadeIn="@{300}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleCode" />

        <EditText
            android:id="@+id/etChildCode"
            style="@style/AppTheme.EditTextTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:hint="@string/complete_name"
            android:inputType="textCapWords"
            app:fadeIn="@{400}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvChildCode" />

        <TextView
            android:id="@+id/tvHospitalCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/choose_hospital"
            android:textSize="@dimen/title_size"
            app:fadeIn="@{600}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etChildCode" />

        <Spinner
            android:id="@+id/sHospitalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:backgroundTint="@color/colorWhite"
            android:popupBackground="@drawable/bg_gradient"
            app:fadeIn="@{700}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHospitalCode" />

        <TextView
            android:id="@+id/tvApplicatorCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/choose_applicator"
            android:textSize="@dimen/title_size"
            app:fadeIn="@{900}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sHospitalCode" />

        <Spinner
            android:id="@+id/sApplicatorCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:backgroundTint="@color/colorWhite"
            android:popupBackground="@drawable/bg_gradient"
            app:fadeIn="@{1000}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvApplicatorCode" />

        <Button
            android:id="@+id/btBackCode"
            style="@style/AppTheme.SecondaryButtonTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/extra_margin"
            android:text="@string/go_back"
            app:fadeIn="@{1200}"
            app:layout_constraintEnd_toStartOf="@+id/btContinueCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sApplicatorCode" />

        <Button
            android:id="@+id/btContinueCode"
            style="@style/AppTheme.ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="@string/advance"
            app:fadeIn="@{1250}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btBackCode"
            app:layout_constraintTop_toTopOf="@+id/btBackCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
